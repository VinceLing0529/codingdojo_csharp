<div class="text-center">
    <h1 class="display-4">Update a exist dish</h1>
    
</div>

<P><a href="/">Home</a></P>
@model Dish
<form asp-action="Update" method="post">
    <div style="display: flex;  justify-content: space-between;">

        <div>
            <label asp-for="Chef">Chef</label>
            <span asp-validation-for="Chef"></span>

            <br>
            <input asp-for="Chef" value="@Model.Chef">   
            <br>
            <label asp-for="Name">Name</label>
                    <span asp-validation-for="Name"></span>

            <br>
            <input asp-for="Name" value="@Model.Name">    
            <br>
            <label asp-for="Calories">Calories</label>
                    <span asp-validation-for="Calories"></span>

            <br>
            <input asp-for="Calories" value="@Model.Calories">    
        </div> 

        <div>
            <label for="Tastiness">Tastiness</label>
                    <span asp-validation-for="Tastiness"></span>

<br>
            <select asp-for="Tastiness" value="@Model.Tastiness">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            </select>
        </div>
        <div>
            <label asp-for="Description">Description</label>
                    <span asp-validation-for="Description"></span>

            <br>
            <textarea asp-for="Description" cols="30" rows="10" value="@Model.Description"></textarea>
                        <br>
        <input type="hidden" name="id" value="@Model.DishId">
            <input type="submit" value="Update dish" id="">
        </div>
    </div>


</form>