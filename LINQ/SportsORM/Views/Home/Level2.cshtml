                </table>

            </li>
            <li>...all football players
                <table class="table table-striped">
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Team Id</th>
                    </tr>
                    @foreach(var l in ViewBag.Allfootball)
                    {
                        <tr> 
                            <td>@l.FirstName</td>
                            <td>@l.LastName</td>
                            <td>@l.TeamId</td>
                            
                        </tr>
                    }
                </table>
            </li>
            <li>...all teams with a (current) player named "Sophia"
                 <table class="table table-striped">
                    <tr>
                        <th>Team Location</th>
                        <th>Team Name</th>
                        <th>League Id</th>
                    </tr>
                    @foreach(var l in ViewBag.ATeamOfSophia)
                    {
                        <tr>
                            <td>@l.Location</td>
                            <td>@l.TeamName</td>
                            <td>@l.LeagueId</td>
                        </tr>
                    }
                </table>
            </li>
            <li>...all leagues with a (current) player named "Sophia"
                <table class="table table-striped">
                    <tr>
                        <th>League Name</th>
                        <th>League Sport</th>
                    </tr>
                    @foreach(var l in ViewBag.AleagueOfSophia)
                    {
                        <tr>
                            <td>@l.Name</td>
                            <td>@l.Sport</td>
                        </tr>
                    }
                </table>
